doctype html
html(lang="de")
  include basic/head.pug
  body
    #content
      include basic/humeb.pug

      h1 #{cocktail}

      table
        tr 
          th.tval Menge
          th.tind Zutat
        each val, index in ingredients
          tr
            td.tval #{val} 
            td.tind #{index}
      h3 Zubereitung:
      p#desq #{description}

      a(href="/cocktails") ZURÜÜÜCK!
